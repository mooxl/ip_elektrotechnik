---
import type { LinkBlock } from "@/types";
type Props = {
  block: LinkBlock;
};
const { block } = Astro.props;
---

<div>
  {
    block.type === "internal" && typeof block.link === "object" && (
      <a
        href={block.link.path + "/"}
        class="inline-block bg-brown font-semibold text-lg rounded-xl py-2 px-10 hover:bg-brown-dark transition-colors"
      >
        {block.label || block.link.title}
      </a>
    )
  }
  {
    block.type === "external" && (
      <a
        href={block.url}
        target="_blank"
        class="inline-block bg-brown font-semibold text-lg rounded-xl py-2 px-10 hover:bg-brown-dark transition-colors"
      >
        {block.label}
      </a>
    )
  }
</div>
